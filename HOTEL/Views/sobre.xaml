<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HOTEL.Views.Sobre">

    <VerticalStackLayout Padding="20" BackgroundColor="White">
        <Label Text="Sobre o Desenvolvedor:" 
               FontSize="30" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               TextColor="BlueViolet"
 FontFamily="DeliusSwashCapsRegular"/>

        <Frame Padding="20" Margin="0,20" BackgroundColor="Lightblue" CornerRadius="10" HasShadow="True">
            <VerticalStackLayout>
                <Label Text="Nome: Gustavo Pessoa Rocha" 
                       FontSize="20" 
                       HorizontalOptions="Center" 
                       Margin="0,10"
      FontFamily="DeliusSwashCapsRegular"                
/>

                <Label Text="Ano de Desenvolvimento: 2024" 
                       FontSize="20" 
                       HorizontalOptions="Center" 
                       Margin="0,10"
                         FontFamily="DeliusSwashCapsRegular"/>

                <Button Text="Voltar" 
                        HorizontalOptions="Center" 
                        Margin="0,30,0,0" 
                        Clicked="OnVoltarClicked"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>

